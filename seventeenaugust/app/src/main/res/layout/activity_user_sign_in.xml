<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iotsolutions.servicenotifier.user_sign_in"

    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        app:theme="@style/MyCustomTheme"/>





    <android.support.design.widget.TextInputLayout
            android:id="@+id/email_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail Id"
            android:layout_marginTop="20dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                />

        </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/pwd_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter Password"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/addbtn"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="onClick"
        android:src="@drawable/ic_action_add" />

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">





        <Button
            android:id="@+id/signin"
            android:layout_width="264dp"
            android:drawableLeft="@drawable/login1"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/signup"
            android:background="@drawable/button_file"
            android:text="Sign In"
            android:textColor="#FFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="69dp"

            android:gravity="center_horizontal">

            <View
                android:layout_width="110dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="#D3D3D3" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:text="OR"
                android:textColor="#A9A9A9" />

            <View
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="#D3D3D3" />
        </LinearLayout>

        <Button
            android:id="@+id/signup"
            android:layout_width="264dp"
            android:drawableLeft="@drawable/signup"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:background="@drawable/button_file"
            android:text="Sign UP"
            android:textColor="#FFF" />


    </RelativeLayout>
    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="130dp"
        android:layout_weight="1"
        android:gravity="end"
        android:padding="0dp"
        android:text="Forgot Password"
        android:textColor="#A9A9A9"
        android:textSize="16sp" />


    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/iot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Â©IoT Solutions,Pune."
            android:textColor="#000"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iot"
            android:layout_centerHorizontal="true"
            android:text="iotsolutionz@gmail.com"
            android:textColor="#000"
            android:textSize="15dp" />
    </RelativeLayout>


</LinearLayout>
